<% include header %>
    <h1>__(Recover password)</h1>

    <% include loader %>

        <% if (messages.error) { %>
            <p class="message_error">
                <%- messages.error %>
            </p>
            <% } %>
                <% if (messages.success) { %>
                    <p class="message_success">
                        <%- messages.success %>
                    </p>
                    <% } %>

                        <form action="/recoverPassword" method="post" name="form1">
                            <div class="form-group">
                                <label for="email">__(Email)</label>
                                <input type="email" name="email" class="form-control" id="email"
                                    aria-describedby="nameHelp" placeholder="Enter email" value="" required />
                            </div>

                            <input type="submit" class="btn btn-primary" value="Add" />
                            <a href="auth/recoverPassword" class="btn btn-success ml-2">Recover Password</a>
                        </form>

                        <% include footer %>